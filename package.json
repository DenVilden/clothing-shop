{
  "name": "clothing-shop",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:5000",
  "engines": {
    "yarn": "1.x"
  },
  "scripts": {
    "client": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "nodemon -r dotenv/config server/index.js",
    "serve": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server/index.js",
    "lint": "eslint src --ext js --fix,jsx && eslint server --fix && stylelint src",
    "coverage": "yarn test --coverage --watchAll=false",
    "postbuild": "precompress build -s -e txt"
  },
  "dependencies": {
    "axios": "0.21.1",
    "express": "^4.17.3",
    "express-sslify": "^1.2.0",
    "express-static-gzip": "^2.0.6",
    "firebase": "^7.14.5",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-stripe-checkout": "^2.6.3",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "stripe": "^8.55.0",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.4",
    "precompress": "^6.2.5",
    "prettier": "^2.0.5",
    "stylelint": "13.5.0",
    "stylelint-config-sass-guidelines": "^7.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
