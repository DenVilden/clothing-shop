{
  "name": "clothing-shop-server",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "8.0.0",
    "express": "^4.17.1",
    "stripe": "7.6.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2"
  },
  "scripts": {
    "start": "cd client && yarn start",
    "server": "nodemon --experimental-modules server.js ",
    "build": "cd client && yarn build",
    "serve": "concurrently --kill-others-on-fail \"yarn server\" \"yarn start\"",
    "heroku": "cd client && yarn install && yarn install --only=dev --no-shrinkwrap && yarn build"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "extends": [
      "airbnb-base/legacy",
      "prettier"
    ]
  }
}
